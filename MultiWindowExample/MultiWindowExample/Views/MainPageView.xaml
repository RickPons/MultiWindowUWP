<Page
    x:Class="MultiWindowExample.Views.MainPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MultiWindowExample.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel VerticalAlignment="Top" Orientation="Horizontal">

            <Button Width="150" Command="{Binding ShowCarsCommand}">Cars</Button>
        </StackPanel>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Main Window</TextBlock>

    </Grid>
</Page>
